# Configuração de Produção - Docker Compose
# UEX Contatos - Sistema de Gerenciamento de Contatos
#
# IMPORTANTE: Copie este arquivo para .env.production e preencha com valores reais
# cp .env.production.example .env.production
#
# NUNCA commite o arquivo .env.production no git!

# =============================================================================
# APLICAÇÃO
# =============================================================================
APP_NAME="UEX Contatos"
APP_ENV=production
APP_KEY=base64:GERE_UMA_CHAVE_COM_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_PORT=80

# =============================================================================
# BANCO DE DADOS
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=uex_contacts
DB_USERNAME=uex_user
DB_PASSWORD=SENHA_DB
DB_ROOT_PASSWORD=SENHA_ROOT

# =============================================================================
# APIS EXTERNAS
# =============================================================================

# Google Maps Geocoding API
# Obtenha em: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=GOOGLE_APY_KEY

# ViaCEP (não precisa de chave)
VIACEP_URL=https://viacep.com.br/ws

# =============================================================================
# FRONTEND
# =============================================================================
FRONTEND_URL=https://your-domain.com

# =============================================================================
# EMAIL / SMTP
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=seu_username_smtp
MAIL_PASSWORD=sua_senha_smtp
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="UEX Contatos"

# =============================================================================
# CACHE & SESSIONS
# =============================================================================
CACHE_STORE=file
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# =============================================================================
# QUEUE
# =============================================================================
QUEUE_CONNECTION=database

# =============================================================================
# LOGS
# =============================================================================
LOG_CHANNEL=stack
LOG_LEVEL=warning

# =============================================================================
# REDIS (opcional, descomente se usar)
# =============================================================================
# REDIS_HOST=redis
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# CACHE_STORE=redis
# SESSION_DRIVER=redis

# =============================================================================
# SEGURANÇA
# =============================================================================
SANCTUM_STATEFUL_DOMAINS=${FRONTEND_URL}
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# =============================================================================
# PERFORMANCE
# =============================================================================
BCRYPT_ROUNDS=12
